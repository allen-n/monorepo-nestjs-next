{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "./",
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "paths": {
      "@app/*": ["src/app/*"],
      "@api/*": ["src/api/*"],
      "@client/*": ["src/client/*"],
      "@utils/*": ["src/utils/*"]
    },
    "strict": true
  }
}
